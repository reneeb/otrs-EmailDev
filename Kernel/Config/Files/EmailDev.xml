<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="EmailDev::Path" Required="0" Valid="1">
        <Description Translatable="1">Path to the directory where the mails are saved to (relative to $OTRS_HOME).</Description>
        <Group>Framework</Group>
        <SubGroup>Core::Sendmail</SubGroup>
        <Setting>
            <String Regex="">var/tmp/email_dev</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AdminEmailDev" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the development emails interface.</Description>
        <Group>EmailDev</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description Translatable="1">List and show development emails.</Description>
                <Title Translatable="1">Development emails</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name Translatable="1">Development emails</Name>
                    <Description Translatable="1">List and show development emails.</Description>
                    <Block>Email</Block>
                    <Prio>12139</Prio>
                </NavBarModule>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
</otrs_config>
